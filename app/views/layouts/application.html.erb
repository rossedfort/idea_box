<!DOCTYPE html>
<html>
<head>
  <title>IdeaBox</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div>
  <% if current_user %>
    <%= link_to "Logout", logout_path, method: :delete %>
  <% else %>
    <%= link_to "Login", login_path %>
  <% end %>
</div>

<div id="goodbye">
  <%= flash[:signout] %>
</div>
<div id="message">
  <%= flash[:message] %>
</div>
<div id="errors">
  <%= flash[:error] %>
</div>
<%= yield %>

</body>
</html>
