<div id="new-idea">
  <%= form_for(@idea) do |f| %>
    <%= f.label :name %>
    <%= f.text_field  :name %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.label :category %>
    <div class="input-field browser-default">
      <%= f.collection_select :category_id, Category.all, :id, :name, {}, {name: "Category", class: "browser-default"} %>
    </div>
    <%= f.submit 'Create Idea' %>
  <% end %>
</div>
