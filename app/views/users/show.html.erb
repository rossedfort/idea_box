<% if current_user %>
  <div class="center">
    <h1>Hello <%= @user.first_name %>!</h1>
  </div>
<% else %>
  <div class="row center">
    <h3>Login here!</h3>
    <div id="session" class="col s6 offset-s3">
      <%= form_for(:session, url: login_path) do |f| %>
        <%= f.label :username %>
        <%= f.text_field :username %>
        <%= f.label :password %>
        <%= f.password_field :password %>
        <%= f.submit "Sign in" %>
      <% end %>
    </div>
  </div>
<% end %>

<div class="center">
  <p>
    <%= link_to 'My Ideas', ideas_path %>
  </p>
</div>
